{
  "extends": "../tsconfig.json",
  "compilerOptions": {

    "lib": ["ESNext"],
    "types": ["node"],

    "outDir": "./dist",
    "rootDir": "./src",

    "jsx": "preserve",

    "baseUrl": "./",
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@application/*": ["src/application/*"],
      "@infrastructure/*": ["src/infrastructure/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
